{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "docker:pinDigests"
  ],
  "baseBranches": [
    "master"
  ],
  "assignees": [
    "sgoettsch"
  ],
  "useBaseBranchConfig": "merge",
  "prHourlyLimit": 0,
  "prConcurrentLimit": 0,
  "dependencyDashboard": true,
  "regexManagers": [
    {
      "enabled": false,
      "matchDatasources": [
        "docker"
      ],
      "matchUpdateTypes": [
        "major"
      ]
    }
  ]
}
